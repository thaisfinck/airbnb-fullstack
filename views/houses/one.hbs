{{> nav}}
<div class="container border-top border-bottom">
	<!--main row with two col-->
	<div class="row">
		<div class="col">
			<img
				src={{house.photos.[0]}}
				class="img-fluid"
				alt="..."
			/>
		</div>
		<!--Second Column with one grid inside-->
		<div class="col">
			<!--firts row with three columns-->
			<div class="container mt-3">
				<div class="row">
					{{#each house.photos as |photo|}}
					<div class="col-4 mt-3">
						<img
							src={{photo}}
							class="img-fluid"
							alt="..."
						/>
					</div>
					{{/each}}
				</div>
			</div>
		</div>
	</div>
</div>

<!--info about the house-->

<div class="container mt-5">
	<!--one row with two col-->
	<div class="row">
		<div class="col-7">
			<h1>{{house.title}}</h1>
			<p>
				<small>
					{{house.location}} . {{house.rooms}}rooms
				</small>
			</p>
			<!--second grid, first row, firts col-->
			<div class="row">
				<div class="col-2">
					<img
						src="{{house.host.avatar}}"
						class="rounded-circle"
						width="70px"
						alt="..."
					/>
				</div>
				<!--second grid, first row, second col-->
				<div class="col-10">
					<p>
						<small>
							Hosted By
						</small>
						<br />{{house.host.name}}
					</p>
				</div>
			</div>

			<!--reviews-->
			<p class="mt-3">
				{{house.description}}
			</p>
			<div class="mt-5">
				<h1>0 Reviews</h1>
				<label for="exampleFormControlTextarea1" class="form-label mb-0"
					>Leave a review</label
				>
				<textarea class="form-control mb-1" rows="5"></textarea>
				<button type="button" class="btn btn-outline-success">
					<i class="fas fa-thumbs-up"></i>
				</button>
				<button type="button" class="btn btn-outline-danger">
					<i class="fas fa-thumbs-down"></i>
				</button>

				<p>
					<button type="submit" class="btn btn-secondary mt-3">
						Submit
					</button>
				</p>
			</div>
		</div>
		<div class="col-5">
			<div class="mx-auto" style="width: 300px;">
				<div class="card shadow bg-body rounded" style="width: 25rem;">
					<div class="card-body">
						<h3 class="card-title">${{house.price}}</h3>
						<h6 class="card-subtitle mb-4 text-muted mt-2">0 Reviews</h6>
						<textarea
							class="form-control mt-2"
							rows="6"
							required
						></textarea>
						<a href="#" class="btn btn-secondary mt-3">Request Booking</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
</body>
