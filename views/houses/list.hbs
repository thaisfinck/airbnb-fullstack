{{> nav}}
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
		<form action="/houses" method="get">
      <ul class="navbar-nav">
        <li class="nav-item">
						<div class="input-group ">
              <label class="input-group-text" for="location"
                ><i class="fas fa-map-marker-alt"></i
              ></label>
              <select class="form-select" id="location" name="location">
                <option value="" selected>Any Location</option>
                <option>Koh Phangam</option>
                <option>Koh Samui</option>
                <option>Bali</option>
              </select>
            </div>
          </li>
					<li class="nav-item">
						<div class="input-group ">
							<label class="input-group-text" for="rooms"
								><i class="fas fa-home"></i
							></label>
							<select class="form-select" id="rooms" name="rooms">
								<option value="" selected>Any rooms</option>
								<option value="1">1 room</option>
								<option value="2">2 rooms</option>
								<option value="3">3 rooms</option>
								<option value="4">4 rooms</option>
								<option value="5">5 rooms</option>
								<option value="more">more</option>
							</select>
						</div>
					</li>
					<li class="nav-item">
            <div class="input-group">
              <span class="input-group-text"
                ><i class="fas fa-dollar-sign"></i
              ></span>
              <input
                type="number"
                class="form-control"
                aria-label="Amount (to the nearest dollar)"
                placeholder="max price"
								name="price"
              />
            </div>
          </li>
					<li class="nav-item">
            <div class="input-group">
              <label class="input-group-text" for="price"
                ><i class="fas fa-sort"></i
              ></label>
              <select class="form-select" id="price" name="sort">
                <option value="1" selected>Price(low to high)</option>
                <option value="-1">Price(high to low)</option>
              </select>
            </div>
          </li>
					<li class="nav-item">
						<input
							type="text"
							class="form-control"
							placeholder="House name..."
							name="search"
						/>
					</li>
					<li class="nav-item">
						<button class="btn btn-secondary">Search</button>
					</li>
				</ul>
			</div>
		</div>
	</nav>
</div>
</form>
<!--Properties-->

<div class="container mt-5">
<div class="row row-col-4">
	{{#each houses as |house|}}

  <div class="col-3">
		<a href='/houses/{{house._id}}'>
    <div class="card" style="width: 280px; height: 330px">

      <img
        src={{house.photos.[2]}}
        class="card-img-top"
				style="width: 278px; height: 186px; object-fit: cover;"


        alt="..."
      />

      <div class="card-body">
        <i class="fas fa-map-marker-alt"></i>
        <small id="address">{{house.location}} . {{house.rooms}} rooms</small>
        <h5 class="card-title mt-2">{{house.title}}</h5>
        <div>
          <div class="row">
            <div class="col-1">
              <small><i class="fas fa-thumbs-up"></i></small>
            </div>
            <div class="col">
              <small>3 reviews</small>
            </div>
            <div class="col">
              <small><p class="card-text text-end">${{house.price}}/night</p></small>
            </div>
          </div>
        </div>
      </div>
    </div>
			</a>
  </div>


		{{/each}}

</div>
</div>
