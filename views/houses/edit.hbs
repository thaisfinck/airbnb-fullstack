{{> nav}}
<div class="container">
    <h1>Edit House</h1>
    <div class="mb-3">
      <label for="exampleFormControlInput1" class="form-label mb-0"
        >Short Title</label
      >
			<form action="/houses/{{editedHouse._id}}?_method=patch" method="post">

      <input type="text" class="form-control" name="title" value="{{editedHouse.title}}" />
    </div>

    <div class="mb-3">
      <label for="exampleFormControlTextarea1" class="form-label mb-0"
        >Description</label
      >
      <textarea class="form-control" name="description" rows="6">{{editedHouse.description}}</textarea
      >
    </div>

    <div class="mb-3">
      <label
        for="exampleFormControlInput1"
        class="form-label mb-0"
        required
        min="1"
        max="50"
        >Number of rooms</label
      >
      <input type="number" class="form-control" name="rooms" value="{{editedHouse.rooms}}" />
    </div>
    <div class="mb-3">
      <label for="exampleFormControlInput1" class="form-label mb-0"
        >Location</label
      >
      <select class="form-select" aria-label="Default select example" name="location">
				<option>{{editedHouse.location}}</option>
        <option>Koh Samui</option>
        <option>Koh Phangam</option>
        <option>Bali</option>
      </select>
    </div>
    <div class="mb-3">
      <label for="form-laber-mb-0" class="form-label mb-0"
        >Price (per night)</label
      >
      <div class="input-group">
        <span class="input-group-text" id="basic-addon1">$</span>
        <input type="number" class="form-control" name="price" value="{{editedHouse.price}}" />
      </div>
    </div>
    <div class="mb-3">
      <label for="exampleFormControlInput1" class="form-label mb-0" required
        >Photos (up to 9)</label
      >
			{{#each editedHouse.photos as |photo|}}
      <input
        type="url"
        class="form-control mb-1"
        placeholder="http://..."
        value="{{photo}}"
				name="photos"
      />
			{{/each}}
    </div>
    <div class="mb-3">
      <button class="btn btn-secondary">
        Submit
      </button>
    </div>
</form>
  </div>
