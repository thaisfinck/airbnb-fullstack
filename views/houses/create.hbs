<div class="container">
	<h1>List a House</h1>
	<div class="mb-3">
		<form action="/houses" method="post">
			<label for="exampleFormControlInput1" class="form-label mb-0" required
				>Short Title</label
			>
			<input type="text" class="form-control" name="title" />
		</div>
		<div class="mb-3">
			<label for="exampleFormControlTextarea1" class="form-label mb-0"
				>Description</label
			>
			<textarea class="form-control" rows="6" name="description" required></textarea>
		</div>
		<div class="mb-3">
			<label
				for="exampleFormControlInput1"
				class="form-label mb-0"
				required
				min="1"
				max="50"
				>Number of rooms</label
			>
			<input type="number" class="form-control" name="rooms" />
		</div>
		<div class="mb-3">
			<label for="exampleFormControlInput1" class="form-label mb-0"
				>Location</label
			>
			<select class="form-select" aria-label="Default select example" name="location">
				<option value="Koh Samui"selected>Koh Samui</option>
				<option value="Koh Phangam">Koh Phangam</option>
				<option value="Bali">Bali</option>
			</select>
		</div>
		<div class="mb-3">
			<label for="form-laber-mb-0" class="form-label mb-0"
				>Price (per night)</label
			>
			<div class="input-group">
				<span class="input-group-text" id="basic-addon1">$</span>
				<input type="number" class="form-control" name="price" />
			</div>
		</div>
		<div class="mb-3">
			<label for="exampleFormControlInput1" class="form-label mb-0" required
				>Photos (up to 9)</label
			>
			<input type="url" class="form-control mb-1" placeholder="http://..." name="photos" />
			<input type="url" class="form-control mb-1" placeholder="http://..." name="photos" />
			<input type="url" class="form-control mb-1" placeholder="http://..." name="photos" />
			<input type="url" class="form-control mb-1" placeholder="http://..." name="photos" />
			<input type="url" class="form-control mb-1" placeholder="http://..." name="photos" />
			<input type="url" class="form-control mb-1" placeholder="http://..." name="photos" />
			<input type="url" class="form-control mb-1" placeholder="http://..." name="photos" />
			<input type="url" class="form-control mb-1" placeholder="http://..." name="photos" />
			<input type="url" class="form-control mb-1" placeholder="http://..." name="photos" />
		</div>
		<div class="mb-3">
			<button type="submit" class="btn btn-secondary">
				Submit
			</button>
		</form>
	</div>
</div>
