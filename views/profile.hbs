{{> nav}}
<!--header-->
<div class="container">
	<div class="row gx-5">
		<!--First column profile-->
		<div class="col-4">
			<h1>Profile</h1>
			<hr />
			<form action="/profile?_method=PATCH" method="post">
				<div class="mb-3 mt-3">
					<label class="form-label">Name</label>
					<div>
						<input type="text" class="form-control" name="name" value="{{user.name}}" />
					</div>
				</div>
				<div class="mb-3">
					<label for="exampleFormControlInput1" class="form-label"
						>Email</label
					>
					<input
						type="email"
						class="form-control"
						id="exampleFormControlInput1"
						value="{{user.email}}"
						name="email"
					/>
				</div>

			<p>Profile picture</p>
			<p>
				<img
					src="{{user.avatar}}"
					class="rounded-circle"
					width="70px"
					alt="..."
				/>
			</p>
			<input
				type="url"
				class="form-control mb-1"
				value="{{user.avatar}}"
				name="avatar"
			/>
			<button class="btn btn-secondary mt-2">
				Save Changes
			</button>
		</div>
					</form>
		<!--Second columns listenings-->
		<div class="col-8">
			<h1>My Listings</h1>
			<hr />
			<button type="submit" class="btn btn-secondary">
				List a House
			</button>
			{{#each house as |h|}}
			<div class="card mb-3 mt-2" style="max-width: 1000px;">
				<div class="row g-0">
					<div class="col-md-4">
						<img
							src="{{h.photos.[0]}}"
							class="img-fluid rounded-start"
							alt="..."
						/>
					</div>
					<div class="col-md-8">
						<div class="card-body">
							<h5 class="card-title">{{h.title}}</h5>
							<i class="fas fa-map-marker-alt"></i>
							<small id="address">{{h.location}} . {{h.rooms}} rooms</small>
							<p class="card-text mt-2">
								{{h.description}}
							</p>
							<a href="/houses/{{h._id}}/edit"
								id="view"
								type="submit"
								class="btn btn-outline-secondary"
							>
								Edit
							</a>
							<a href="/houses/{{h._id}}"
								id="view"
								type="submit"
								class="btn btn-outline-secondary"
							>
								View
							</a>

						</div>
					</div>
				</div>
			</div>
			{{/each}}
		</div>
	</div>
</div>
